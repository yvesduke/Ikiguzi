<div class="jumbotron">
  <h1>African Handcrafted <br>
    Art works sold Online.</h1>
  <h2>Discover one-of-the-African-Unique-ArtWorks</h2>
</div>
<div class="center">
  <h1>Listing listings</h1>
  <div class="row">
  <% @listings.each do |listing| %>
   <div class="col-md-3">
     <div class="thumbnail">
      <%= link_to image_tag(listing.image.url), listing %>
      
      <div class="caption">
        <h3><%= listing.name %><br></h3>
        <p><%= number_to_currency(listing.price) %></p>
        <p><%="sold by #{listing.user.name}" %></p>
      </div>
    </div> 
   </div>
  <% end %>
  </div>
</div>
<br>

<% if user_signed_in? %>
 <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>
